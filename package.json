{
  "name": "unittest-switcher",
  "displayName": "UnitTest Switcher",
  "description": "Switch the unit test / code.",
  "version": "0.0.2",
  "author": "HOMMA Takashi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/takas-ho/vscode-unittest-switcher.git"
  },
  "bugs": {
    "url": "https://github.com/takas-ho/vscode-unittest-switcher/issues"
  },
  "publisher": "takas-ho",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "unittest-switcher.go-to-test-code",
        "title": "Go to Test/Code",
        "category": "Tests"
      }
    ],
    "keybindings": [
      {
        "command": "unittest-switcher.go-to-test-code",
        "key": "Ctrl+9",
        "mac": "Cmd+9",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
        "editor/context": [{
            "when": "resourceLangId != markdown",
            "command": "unittest-switcher.go-to-test-code",
            "group": "navigation"
        }]
    },
    "configuration": {
      "type": "object",
      "title": "UnitTest Switcher Options",
      "properties": {
        "unittest-switcher.unittest.suffix": {
          "default": ["Spec", "-spec", "Test", "-test", ".test"],
          "description": "UnitTest suffix",
          "type": ["string"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "tslint": "^3.15.1",
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  }
}
